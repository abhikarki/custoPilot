# ============================================
# CustoPilot Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# APPLICATION SETTINGS
# ============================================
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
DEBUG=false

# Base URL for the application (used for embed widget)
# Local: http://localhost:8080
# Production: https://your-app.railway.app
BASE_URL=http://localhost:8080

# ============================================
# DATABASE
# ============================================
# Local development (SQLite):
# DATABASE_URL=sqlite+aiosqlite:///./data/custopilot.db

# Production (PostgreSQL) - Get free DB from neon.tech:
# Format: postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/custopilot

# ============================================
# OPENAI (Required)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# LANGSMITH (Optional - for tracing)
# ============================================
# Get your API key from: https://smith.langchain.com/
# Set to false to disable tracing
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls-your-langsmith-api-key-here
LANGCHAIN_PROJECT=custopilot
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIRECTORY=/app/data/uploads
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
MAX_UPLOAD_SIZE=52428800

# ============================================
# AGENT CONFIGURATION
# ============================================
CONFIDENCE_THRESHOLD=0.7
MAX_RETRIES=3
