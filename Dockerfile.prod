FROM python:3.11-slim AS backend-base

WORKDIR /app

RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

FROM backend-base AS frontend-builder

WORKDIR /app/frontend
COPY frontend/package*.json ./
RUN npm ci

COPY frontend/ ./
RUN npm run build

FROM backend-base AS production

WORKDIR /app

COPY backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY backend/ ./

COPY --from=frontend-builder /app/frontend/dist ./static

RUN mkdir -p /app/data/chroma /app/data/uploads /app/static

ENV PORT=8080
ENV DEBUG=false
ENV DATABASE_URL=sqlite+aiosqlite:///./data/custopilot.db
ENV CHROMA_PERSIST_DIRECTORY=/app/data/chroma
ENV UPLOAD_DIRECTORY=/app/data/uploads
ENV LANGCHAIN_TRACING_V2=false



# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"]
